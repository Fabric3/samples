<?xml version="1.0" encoding="UTF-8"?>
<composite xmlns="http://docs.oasis-open.org/ns/opencsa/sca/200912"
           xmlns:f3="urn:fabric3.org"
           name="WiringComposite"
           targetNamespace="urn:fabric3.org:samples"
           autowire="true">

    <!-- Autowire is enabled in this composite. This will result in all services being automatically injected by type. -->

    <component name="WiringClient">
        <f3:implementation.timer class="org.fabric3.samples.wiring.WiringClient" repeatInterval="3000"/>
    </component>

    <component name="MainPipeline">
        <implementation.java class="org.fabric3.samples.wiring.pipeline.PipelineImpl"/>
    </component>

    <component name="FirstPipelineService">
        <implementation.java class="org.fabric3.samples.wiring.pipeline.FirstPipelineService"/>
    </component>

    <component name="SecondPipelineService">
        <implementation.java class="org.fabric3.samples.wiring.pipeline.SecondPipelineService"/>
    </component>

    <component name="Registry">
        <implementation.java class="org.fabric3.samples.wiring.registry.RegistryImpl"/>
    </component>

    <component name="StringMessageHandler">
        <implementation.java class="org.fabric3.samples.wiring.registry.StringMessageHandler"/>
    </component>

    <component name="IntMessageHandler">
        <implementation.java class="org.fabric3.samples.wiring.registry.IntMessageHandler"/>
    </component>

</composite>